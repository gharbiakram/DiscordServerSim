<Window x:Class="DiscordServerSimUI.Views.LoginView.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscordServerSimUI.Views.LoginView"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="20*"/>

            <RowDefinition Height="80*"/>




        </Grid.RowDefinitions>

        <Grid Grid.Column="0">

            <Border Background="DodgerBlue">
                
            <TextBlock Text="Discord Server SIM" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" FontWeight="Light" Foreground="AliceBlue"/>
                
            </Border>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>

                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>


            </Grid.RowDefinitions>

            <Grid Grid.Row="0"> 
                
            <TextBox Width="400" Height="40" BorderThickness="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                
            </Grid>
            <Grid Grid.Row="1">

                <Border Padding="5">
                    
            <TextBox Width="400" Height="40" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Center" />
                    
                </Border>

                <Button Width="100" Height="50" VerticalAlignment="Center" Content="Confirm" Foreground="AliceBlue" Background="DodgerBlue" FontSize="20" Click="LoginConfirm" />

            </Grid>
            
            
            

        </Grid>
        
        
        
    </Grid>
</Window>
